
<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white banner">
    <h1>Save any kind of movies</h1>
    <h3 class="typed-js">Classic</h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <button type="button" class="btn btn-light"><%= link_to 'Create a movie list', new_list_path, class: 'btn btn-info' %></button>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1577033117892-6d498c6c7921?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1050&q=80)">
        <%= link_to list_path(list), class:'text-decoration-none' do %>
          <div class="text-white">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

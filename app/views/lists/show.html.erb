<div class="container">

      <% @list.bookmarks.each do |bookmark| %>
      <div class="card col-6 mt-4 mb-4">
        <h3> <%= bookmark.movie.title %></h3>
        <p> <%= bookmark.movie.overview %></p>
        <%= image_tag bookmark.movie.poster_url, alt:bookmark.movie.title%>

        <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: "Do you really want to delete this?" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <% end %>
      </div>
      <div class="mx-3 my-3">
        <button type="button" class="btn btn-success"><%= link_to "Back to list", lists_path %></button>
        <button type="button" class="btn btn-success"><%= link_to "Add movie", new_list_bookmark_path(@list) %></button>
      </div>
  </div>
